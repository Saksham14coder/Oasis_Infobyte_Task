<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/white">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"

      >
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/input"

        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="end"
        android:layout_gravity="end"
        android:hint="0"
        android:textSize="50sp"
        android:textStyle="normal"
        android:textColor="@color/black_shade"/>

</HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/output"

                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_below="@+id/input"
                android:gravity="end"
                android:layout_gravity="end"
                android:textSize="100sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                />
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
android:padding="10dp"
            android:background="#535252">

        <LinearLayout
            android:id="@+id/l1"
android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/more"
                android:layout_width="71dp"
                android:layout_height="70dp"

                android:padding="6dp"

               />

            <ImageView
                android:id="@+id/b_ac"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal" />

            <ImageView
                android:id="@+id/b_module"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal14" />

            <ImageView
                android:id="@+id/b_divide"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal18" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp">


            <ImageView
                android:id="@+id/b7"
                android:layout_width="71dp"
                android:layout_height="70dp"

                android:padding="6dp"
                android:src="@drawable/cal7" />

            <ImageView
                android:id="@+id/b8"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal8" />

            <ImageView
                android:id="@+id/b9"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal9" />

            <ImageView
                android:id="@+id/b_multi"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal17" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginTop="5dp">


            <ImageView
                android:id="@+id/b4"
                android:layout_width="71dp"
                android:layout_height="70dp"

                android:padding="6dp"
                android:src="@drawable/cal4" />

            <ImageView
                android:id="@+id/b5"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal5" />

            <ImageView
                android:id="@+id/b6"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal6" />

            <ImageView
                android:id="@+id/b_sub"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l3"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp">


            <ImageView
                android:id="@+id/b1"
                android:layout_width="71dp"
                android:layout_height="70dp"

                android:padding="6dp"
                android:src="@drawable/cal1" />

            <ImageView
                android:id="@+id/b2"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal2" />

            <ImageView
                android:id="@+id/b3"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal3" />

            <ImageView
                android:id="@+id/b_add"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l4"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp">


            <ImageView
                android:layout_width="71dp"
                android:layout_height="70dp"

                android:padding="6dp"

                android:visibility="invisible" />

            <ImageView
                android:id="@+id/b0"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal0" />

            <ImageView
                android:id="@+id/b_dot"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal10" />

            <ImageView
                android:id="@+id/b_equal"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:layout_marginStart="16sp"
                android:padding="6dp"
                android:src="@drawable/cal19" />

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

